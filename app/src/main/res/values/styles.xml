<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.V7.Widget.AppCompat.EditText.Card" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_card_edit</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Base.V7.Widget.AppCompat.EditText.Edit" >
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:color">@android:color/white</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.Btn">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
