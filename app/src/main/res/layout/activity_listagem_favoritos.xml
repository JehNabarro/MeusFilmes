<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#861B37">

    <include
        android:id="@+id/toolbar_favoritos"
        layout="@layout/toolbar_favoritos" />

    <view class="android.support.v7.app.AlertController$RecycleListView"
        android:id="@+id/recycler_view_layour_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:listitem="@layout/line_list_favoritos" />

</LinearLayout>